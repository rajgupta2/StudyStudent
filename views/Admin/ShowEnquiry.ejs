<div class="" style="min-height: 400px;">
    <div class="row">
        <div class="col-sm-12">
            <h1>Enquiries</h1>
            <% if(DBqueries!=undefined){ %>
            <table class="table table-hover text-center" >
                <thead>
                    <tr class="text-dark">
                        <th>Name</th>
                        <th>Email-ID</th>
                        <th>Phone</th>
                        <th>Query</th>
                        <th>Date</th>
                        <th>Reply</th>
                    </tr>
                </thead>
                <tbody>
                    <% DBqueries.forEach(function(e){ %>
                        <tr>
                        <td><%= e.Name%></td>
                        <td><%= e.Email%></td>
                        <td><%= e.Contact%></td>
                        <td><%= e.Query%></td>
                        <td><%= e.Date%></td>
                        <td><a href="/Admin/AnswerQuery?pk=<%= e._id%>" class="btn btn-info">Answer</a></td>
                        </tr>
                     <% }); %>
                </tbody>
            </table>
            <% }else{ %>
                <h5 class="text-info">There are no more enquiries.</h5>
            <% } %>
        </div>
    </div>
</div>


