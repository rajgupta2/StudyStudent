<div class="mt-5" style="min-height: 400px;" >
    <h2>Submitted Assignment by students</h2>
    <div class="table-responsive">
        <% if(Assignment!==undefined && Assignment.length>0) {%>
        <table class="table table-hover">
            <thead class="table-info text-success">
                <tr>
                    <th>Student's Name</th>
                    <th>Student's Email</th>
                    <th>Subject</th>
                    <th>Assignment</th>
                    <th>Uploaded Date</th>
                </tr>
            </thead>
            <tbody>
                <% Assignment.forEach(function(e){ %>
                    <tr>
                        <td><%=e.Student_Name%></td>
                        <td><%=e.Student_Email%></td>
                        <td><%=e.Subject%></td>
                        <td><a href="/Admin/Download?file=SubmittedAssignment/<%=e.Assignment%>" download>View</a></td>
                        <td><%=e.Date%></td>
                    </tr>
                <%});%>
            </tbody>
        </table>
        <% }else{ %>
            <h5 class="text-info">There are no files available yet.</h5>
        <% } %>
    </div>
</div>