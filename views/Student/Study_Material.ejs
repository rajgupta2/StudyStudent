<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="text-lg-center text-success">Study Materials</h1>
            <table class="table table-hover  table-bordered text-center">
                <thead>
                    <tr class="text-dark table-primary">
                        <th>Subject</th>
                        <th>Description</th>
                        <th>Study Materials</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (Tbl_StudyMaterial e in Model)
                        {
                                        <tr>
                                            <td>@e.Subject</td>
                                            <td>@e.Description</td>
                                            <td><a href="~/Content/StudyMaterials/@e.StudyMaterial" download>Download</a></td>
                                            <td>@e.Date</td>
                                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



