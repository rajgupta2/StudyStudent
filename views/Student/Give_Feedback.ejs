<script>
    $(document).ready(function () {
        $("[type*='submit']").click(function () {
            var Feedback_Subject = $("#Feedback_Subject").val().trim();
            var Message = $("#Message").val().trim();
            var status = true;
            $(".err").remove();
            if (Feedback_Subject.length==0){
                status=false;
                $("#Feedback_Subject").after("<span class='err'>Please Enter Feedback Subject.</span>");
            }
            if (Message.length<12) {
                status = false;
                $("#Message").after("<span class='err'>Feedback Message have atleast 12 characters.</span>");
            }
            $(".err").addClass("text-danger");
            return status;
        });
    });
</script>
<style>
    #feedback {
        background: linear-gradient(168deg,blue,pink);
    }
</style>
<div class="container my-5 pt-lg-5"  >
    <h1 class="text-success">Feedback</h1>
    <% if(locals.msg){ %>
        <p id="presponse" class="alert alert-dark text-center h4 " style="min-height:40px; width:100%;">
        <%=msg%>
        </p>
    <% } %>
    <div class="row pb-5 pt-lg-5 align-items-center" id="feedback" style="background: linear-gradient(135deg, #f8fafc, #e0e7ff); border-radius: 20px;">
         <!-- Text Content -->
        <div class="col-md-6 text-center px-4 mb-4 mb-md-0">
            <h1 class="display-5 fw-bold text-primary">We're Excited</h1>
            <h3 class="text-muted">to hear from you!</h3>
            <p class="mt-3 text-secondary">Your feedback helps us improve and serve you better.</p>
        </div>

        <!-- Feedback Form -->
        <div class="col-md-6">
            <div class="card shadow p-4 border-0 rounded">
            <h4 class="mb-4 text-center">Send Us Your Feedback</h4>
            <form action="/Student/Give_FeedBack" method="post">
                <div class="mb-3">
                <label for="Feedback_Subject" class="form-label">Subject</label>
                <input type="text" class="form-control" id="Feedback_Subject" name="Feedback_Subject" placeholder="Subject of feedback" required>
                </div>

                <div class="mb-3">
                <label for="Message" class="form-label">Message</label>
                <textarea class="form-control" id="Message" name="Message" rows="4" placeholder="Your feedback message" required style="resize: none;"></textarea>
                </div>

                <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">Submit Feedback</button>
                <button type="reset" class="btn btn-outline-warning">Reset Form</button>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>

