
<script>
    $(document).ready(function () {
        $("#SubmittedAssBtn").click(function () {
            $("#Assignment").hide();
            $("#myAssignment").show();
        });
        $("#Assign").click(function () {
            $("#Assignment").show();
            $("#myAssignment").hide();
        });

    });
</script>
<ul class="nav nav-tabs mt-3" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <h5 class="nav-link active text-info" id="Assign" data-target="#Assignment" data-toggle="tab">Assignments</h5>
    </li>
    <li class="nav-item" role="presentation">
        <h5 id="SubmittedAssBtn"  data-toggle="tab" data-target="#myAssignment"  class="nav-link text-info">My Submitted Assignment</h5>
    </li>
</ul>
<div class="container mt-2" id="Assignment">
    <p id="presponse" class="alert alert-dark text-center h4 " style="min-height:40px; width:100%;display:none;">@ViewBag.msg</p>
    <div class="row">
        <div class="col-sm-12">
            <h4>Given Assignment</h4>
            <table class="table table-hover">
                <thead class="table-info text-success">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Uploaded Date</th>
                        <th>Deadline</th>
                        <th>Attachment</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (Tbl_GiveAssignment tn in givenAssignments)
                        {
                            <tr>
                                <td>@tn.Title</td>
                                <td>@tn.Description</td>
                                <td>@tn.Date</td>
                                <td>@tn.Deadline</td>
                                <td><a href="~/Content/Assignment_Attachments/@tn.Attachment" class="nav-link">View</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="container mt-2" id="myAssignment" style="display:none;">
    <h4>Submitted Assignments</h4>
    <p id="presponse" class="alert alert-dark text-center h4 " style="min-height:40px; width:100%;display:none;">@ViewBag.msg</p>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover">
                <thead class="table-info text-success">
                    <tr>
                        <th>Subject</th>
                        <th>Assignment</th>
                        <th>Uploaded Date</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (Tbl_SubmitAssignment tn in Model)
                        {
                            <tr>
                                <td>@tn.Subject</td>
                                <td><a href="~/Content/SubmittedAssignment/@tn.Assignment">View</a></td>
                                <td>@tn.Date</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>