<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudyStudent Student</title>
    <script src="/JS/jquery-3.6.0.min.js"></script>
    <script src="/JS/bootstrap.bundle.min.js"></script>
    <script src="/JS/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="/css/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        a.nav-link {
            color: #007bff !important;
        }

        .dropdown-menu {
            width: max-content;
        }

        a {
            text-decoration: none !important;
        }
        #backtotop {
            position: fixed;
            right: 20px;
            bottom: 35px;
            border-radius: 50%;
            z-index: 2;
        }
        .dark {
            background-color: #222;
            color: #e6e6e6;
        }
    </style>
    <script>
        $(document).ready(function () {
            //Adding Some Effect On messeging from server-side
            if ($("#presponse").text().length > 0)
                $("#presponse").fadeToggle(1500).delay(2000).fadeToggle(1000);
            //for adding hover effect on navbar
            var fg = $("[href*='#']");
            $(fg).hover(function () {
                $(this).next().stop(2500).fadeToggle();
            });
            $(fg.next()).hover(function () {
                $(this).stop(2000).fadeToggle();
            });
            if ($("html,body").width() < 1000) {
                $("#navBtn").css({ position: "absolute", left: $("html,body").width() - 100 });
            }
            $(window).scroll(function () {
                if ($(window).scrollTop() > 20) {
                    $("#backtotop").show();
                    $(".navbar").addClass("alert-dark");
                } else {
                    $("#backtotop").hide();
                    $(".navbar").removeClass("alert-dark");
                }

                if ($(".navbar").hasClass("alert-dark"))
                    $(".navbar-brand").removeClass("text-white");
                else
                    $(".navbar-brand").addClass("text-white");

                if ($(".mode>i").hasClass("bi-toggle-off")) {
                    $(".navbar-brand").removeClass("text-white");
                }
            });
            $(".navbar-toggler-icon").click(function () {
                $(".navbar").addClass("alert-dark");
                $(".navbar-brand").removeClass("text-white");

            });
            $(".change").click(function () {
                if ($("body").hasClass("dark")) {
                    $("body").removeClass("dark");
                    $(".change").addClass("bi bi-toggle-off");
                    $(".change").removeClass("bi bi-toggle-on");
                    $(".navbar-brand").removeClass("text-white");

                } else {
                    $("body").addClass("dark");
                    $(".change").removeClass("bi bi-toggle-off");
                    $(".change").addClass("bi bi-toggle-on");
                    $(".navbar-brand").addClass("text-white");
                }
                if ($(".mode>i").hasClass("bi-toggle-off")) {
                    $("td").removeClass("text-white");
                } else {
                    $("td").addClass("text-white");
                }
            });
            //backtotop
            $("#backtotop").click(function () {
                $("html,body").animate({ scrollTop: 0 }, '1500');
            });
            if ($(".mode>i").hasClass("bi-toggle-off")) {
                $("td").removeClass("text-white");
            } else
                $("td").addClass("text-white");
        });
    </script>
</head>
    <body class="dark">
        <!--back to top btn-->
        <a id="backtotop" class="bg-info btn" style="display:none;"><i class="bi bi-arrow-up"></i></a>
        <div class="container">
            <div class="row navbar navbar-expand-lg navbar-light py-0 fixed-top">
                <div class="col-sm-2 pl-lg-5 ml-lg-5">
                    <a class="navbar-brand text-white" href="/">StudyStudent</a>
                    <button class="navbar-toggler float-right border-0" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="col-sm-10">
                    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                        <a class="nav-link" href="/Student/Greetings">Home</a>
                        <a class="nav-link" href="/Student/Submit_Assignment">Submit Assignment</a>
                        <a class="nav-link" href="/Student/View_Assignment">View Assignment</a>
                        <a class="nav-link" href="/Student/Study_Materials">Study Materials</a>
                        <a class="nav-link" href="/Student/Give_FeedBack">Feedback</a>
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown"
                               href="#Settings">Settings</a>
                            <div class="dropdown-menu" id="Settings">
                                <b class="nav-link"><%if(locals.session){%> 
                                    <%= session%>
                                    <%}%>
                                </b>
                                <a class="nav-link" href="/Student/ChangePassword">Change Password</a>
                                <a class="nav-link" href="/Student/Logout">LogOut</a>
                            </div>

                        </div>
                        <div class="mode pl-3">
                            Dark mode:
                            <i class="bi bi-toggle-on change"></i>
                        </div>
                    </div>
                </div>
            </div>
            <!--Mainbody-->
            <div class="mt-4 pt-2">
                <%- body %>
            </div>
            <!--Footer Bottom-->
            <div class="row pl-4 mr-0 bg-dark text-white fixed-bottom" id="bottomFooter">
                <div class="col-sm-6">
                    Â© 2021 Copyright:All rights are reserved by<a href="/Home">StudyStudent.com</a>
                </div>
                <div class="col-sm-4">
                    Developed By<a href="/Home">Student</a> Team
                </div>
            </div>
        </div>
    </body>
</html>
